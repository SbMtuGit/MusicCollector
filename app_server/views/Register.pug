extends layout

block content
  .container
    h1 Register
    form(action="/auth/register", method="POST")
      .form-group
        label(for="username") Username:
        input.form-control(type="text", name="username", id="username", required)
      .form-group
        label(for="email") Email:
        input.form-control(type="email", name="email", id="email", required)
      .form-group
        label(for="password") Password:
        input.form-control(type="password", name="password", id="password", required)
      .form-group
        label(for="confirmPassword") Confirm Password:
        input.form-control(type="password", name="confirmPassword", id="confirmPassword", required)
      button.btn.btn-primary(type="submit") Register
    if error
      .alert.alert-danger
        p= error

